<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item android:bottom="-2dp">
                <shape>
                    <solid android:color="@android:color/transparent"/>
                    <stroke android:width="2dp" android:color="#0093FF"/>
                    <corners android:topRightRadius="@dimen/corner_item_bottom_recycler_view" android:topLeftRadius="@dimen/corner_item_bottom_recycler_view"/>
                </shape>
            </item>
        </layer-list>

    </item>
    <item android:state_selected="false">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <corners android:topRightRadius="@dimen/corner_item_bottom_recycler_view" android:topLeftRadius="@dimen/corner_item_bottom_recycler_view"/>
        </shape>
    </item>
</selector>