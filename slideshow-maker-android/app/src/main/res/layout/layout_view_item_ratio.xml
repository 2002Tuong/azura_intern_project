<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="76dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutRatioIcon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/background_selected_transition"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ratioIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp"
            android:src="@drawable/icon_ratio_1_1" />
    </LinearLayout>

    <TextView
        android:id="@+id/ratioTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/layoutRatioIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>