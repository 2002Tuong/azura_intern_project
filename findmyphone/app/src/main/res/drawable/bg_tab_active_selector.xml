<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <layer-list>
            <item android:width="126dp" android:height="126dp">
                <shape android:shape="oval">
                    <solid android:color="#ECEDEF" />
                    <size android:width="22dp" android:height="22dp" />
                </shape>
            </item>
            <item android:width="104dp" android:height="104dp" android:drawable="@drawable/tab_to_active_not_select_layer_2" android:gravity="center" />
            <item android:width="90dp" android:height="90dp" android:gravity="center">
                <shape android:shape="oval">
                    <size android:width="14dp" android:height="14dp" />
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
   <item android:state_selected="true">
       <layer-list>
           <item android:width="126dp" android:height="126dp">
               <shape android:shape="oval">
                   <solid android:color="#E8F4FE" />
                   <size android:width="22dp" android:height="22dp" />
               </shape>
           </item>
           <item android:width="104dp" android:height="104dp" android:drawable="@drawable/tab_to_active_selected_layer_2" android:gravity="center" />
           <item android:width="90dp" android:height="90dp" android:gravity="center">
               <shape android:shape="oval">
                   <size android:width="14dp" android:height="14dp" />
                   <solid android:color="@color/white" />
               </shape>
           </item>
       </layer-list>
   </item>
</selector>