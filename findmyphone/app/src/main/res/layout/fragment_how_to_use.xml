<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_40_dp"
            android:layout_marginTop="@dimen/margin_16_dp"
            android:layout_marginEnd="@dimen/margin_40_dp"
            android:gravity="center"
            android:text="@string/how_to_use_description"
            android:textColor="@color/text_color_2"
            android:textSize="@dimen/text_size_16_sp" />

        <com.example.claptofindphone.presenter.common.ItemHowToUse
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8_dp"
            app:isHowToUse_1="true"/>
        <com.example.claptofindphone.presenter.common.ItemHowToUse
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12_dp"
            app:isHowToUse_2="true"/>
        <com.example.claptofindphone.presenter.common.ItemHowToUse
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12_dp"
            app:isHowToUse_3="true"/>
        <com.example.claptofindphone.presenter.common.ItemHowToUse
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12_dp"
            app:isHowToUse_4="true"/>
    </LinearLayout>
</LinearLayout>
