<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/thumbnail_background_height"
    android:layout_margin="7dp"
    android:clipChildren="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:maxHeight="@dimen/thumbnail_background_height">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="100dp"
        android:layout_height="@dimen/thumbnail_background_height"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="14dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/purple_50"
        app:strokeWidth="2dp">

        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:padding="1dp"
            android:scaleType="centerCrop" />


    </com.google.android.material.card.MaterialCardView>

    <ImageButton
        android:id="@+id/removeButton"
        android:layout_width="24dp"
        android:layout_height="18dp"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:background="@drawable/item_remove_bt_your_avatar_bg"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        android:src="@drawable/icon_close"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/red_800"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>

