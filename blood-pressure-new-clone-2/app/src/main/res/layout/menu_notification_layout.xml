<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/blood_pressure_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:minHeight="40dp"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_blood_pressure" />
        <TextView
                android:textAlignment="center"
                android:text="@string/blood_pressure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/heart_rate_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:minHeight="40dp"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart_rate" />
        <TextView
                android:textAlignment="center"
                android:text="@string/heart_rate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/blood_sugar_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:minHeight="40dp"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_blood_sugar" />

        <TextView
                android:textAlignment="center"
                android:text="@string/blood_sugar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bmi_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:minHeight="40dp"
        android:paddingVertical="10dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bmi" />
        <TextView
                android:textAlignment="center"
                android:gravity="center"
                android:text="@string/bmi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>


</LinearLayout>